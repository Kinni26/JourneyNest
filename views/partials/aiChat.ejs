

<style>
:root {
  --bg: #ffffff;
  --text: #000;
  --user: #0d6efd;
  --ai: #e9ecef;
  --header: linear-gradient(135deg, #0d6efd, #00b4d8);
}

.dark {
  --bg: #1e1e1e;
  --text: #f1f1f1;
  --user: #0d6efd;
  --ai: #333;
  --header: linear-gradient(135deg, #111, #333);
}

#ai-chat {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 330px;
  background: var(--bg);
  color: var(--text);
  border-radius: 14px;
  box-shadow: 0 10px 25px rgba(0,0,0,.2);
  font-family: Arial, sans-serif;
  overflow: hidden;
  z-index: 9999;
}

#ai-header {
  background: var(--header);
  color: white;
  padding: 12px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
}

#ai-header span {
  cursor: pointer;
  font-size: 14px;
}

#messages {
  height: 230px;
  overflow-y: auto;
  padding: 10px;
  background: var(--bg);
}

.msg {
  max-width: 80%;
  padding: 8px 12px;
  margin: 6px 0;
  border-radius: 16px;
  font-size: 14px;
}

.user {
  background: var(--user);
  color: white;
  margin-left: auto;
  border-bottom-right-radius: 4px;
}

.ai {
  background: var(--ai);
  margin-right: auto;
  border-bottom-left-radius: 4px;
}

#ai-input {
  display: flex;
  border-top: 1px solid #ccc;
}

#userInput {
  flex: 1;
  padding: 10px;
  border: none;
  outline: none;
  background: var(--bg);
  color: var(--text);
}

#sendBtn {
  background: #0d6efd;
  color: white;
  border: none;
  padding: 0 16px;
  cursor: pointer;
}

#sendBtn:hover {
  background: #084298;
}

.hidden {
  display: none;
}
</style>

<div id="ai-chat">
  <div id="ai-header">
    üåç Wanderlust Chatbot
    <div>
      <span onclick="toggleDark()"><i class="fa-solid fa-sun"></i></span>
      <span onclick="toggleChat()"><i class="fa-solid fa-minus"></i></span>
    </div>
  </div>

  <div id="messages"></div>

  <div id="ai-input">
    <input id="userInput" placeholder="Ask Wanderlust AI..." />
    <button id="sendBtn" onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
let minimized = false;

function toggleChat() {
  const chat = document.getElementById("messages");
  const input = document.getElementById("ai-input");
  minimized = !minimized;
  chat.classList.toggle("hidden");
  input.classList.toggle("hidden");
}

function toggleDark() {
  document.getElementById("ai-chat").classList.toggle("dark");
}



function typingEffect(el, text) {
  let i = 0;
  const interval = setInterval(() => {
    el.textContent += text[i]; //  textContent use karo
    i++;
    if (i === text.length) clearInterval(interval);
  }, 25);
}


async function sendMessage() {
  const input = document.getElementById("userInput");
  const msg = input.value.trim();
  if (!msg) return;

  const messagesDiv = document.getElementById("messages");

  const userMsg = document.createElement("div");
  userMsg.className = "msg user";
  userMsg.innerText = msg;
  messagesDiv.appendChild(userMsg);

  input.value = "";
  messagesDiv.scrollTop = messagesDiv.scrollHeight;

  const typing = document.createElement("div");
  typing.className = "msg ai";
  typing.innerText = "Typing...";
  messagesDiv.appendChild(typing);

  try {
    const res = await fetch("/ai/chat", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ message: msg }),
         
    });

    const data = await res.json();
    typing.innerText = "";
    typingEffect(typing, data.reply);
  } catch {
    typing.innerText = "AI error. Try again.";
  }
}
</script>
